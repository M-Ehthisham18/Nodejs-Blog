<form action="/admin/add-post" method="POST" enctype="multipart/form-data">
  <label for="title"><b>Title</b></label>
  <input type="text" id="title" placeholder="Post Title" name="title" autofocus required maxlength="150">

  <label for="body"><b>Content</b></label>
  <textarea id="body" name="body" cols="50" rows="10" required></textarea>

  <label for="media"><b>Media (Images/Videos)</b> [png, jpeg, web, mp4 ,avi]</label>
  <input type="file" id="media" name="media" accept="image/jpeg, image/png, image/webp, video/mp4, video/avi" multiple>
  <br><br>

  <input type="submit" value="Add" class="btn">
</form>
