<style>
/* Admin Post List Styles */
.admin-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.button {
  background-color: #007BFF;
  color: white;
  padding: 10px 20px;
  border-radius: 5px;
  text-decoration: none;
  font-size: 1rem;
  font-weight: 600;
  transition: background-color 0.3s;
}

.button:hover {
  background-color: #0056b3;
}

.admin-posts li {
  margin-bottom: 20px;
  padding: 10px;
  border: 1px solid #ddd;
  border-radius: 8px;
  background-color: #f9f9f9;

  align-items: center;
}

.admin-posts a {
  font-size: 1.2rem;
  color: #000a14;
  text-decoration: none;
  font-weight: 600;
}
.admin-post-controls{
  .btn{
    @media (max-width:900px) {
      display: block;
    }
  }
}
.admin-post-controls .btn {
  background-color: #4CAF50;
  color: white;
  padding: 5px 15px;
  border-radius: 5px;
  text-decoration: none;
  font-weight: 600;
  text-align: center;
}

.admin-post-controls .btn-delete {
  background-color: #b30000;
  color: white;
  padding: 10px 15px;
  border-radius: 5px;
  cursor: pointer;
  border: none;
}

/* Pagination Styling */
.pagination-button {
  display: flex;
  justify-content: space-between;
  padding: 20px 0;
}

.pagination {
  font-size: 1.1rem;
  color: #007BFF;
  text-decoration: none;
}

</style>

<div style="display: flex; align-items: center; gap: 8px; font-size: x-large; text-transform: capitalize; padding: 32px 4px;">
  <span>Admin: </span>
  <h2 style="font-weight: 600; color: #333;"><%= locals.adminName %></h2>
</div>

<section>
  <div class="admin-title">
    <h2 style="font-size: 2rem; color: #333;">Posts</h2>
    <a href="/admin/add-post" class="button">+ Add New</a>
  </div>

  <ul class="admin-posts">
    <% data.forEach(post => { %>
      <% if (post.body && post.title !== "") { %>
        <li >
          <a href="/admin/admin-post/<%= post._id %>" >
            <%= post.title %> &nearr;
          </a>
          <div class="admin-post-controls" >
            <a href="/admin/edit-post/<%= post._id %>" class="btn" >Edit</a>
            <form action="/admin/delete-post/<%= post._id %>?_method=DELETE" method="POST" >
              <input type="submit" value="Delete" class="btn-delete" >
            </form>
          </div>
        </li>
      <% } %>
    <% }) %>
  </ul>

  <div class="pagination-button" style="display: flex; justify-content: space-between; padding: 20px 0;">
    <div>
      <% if (previousPage !== null) { %>
        <a href="/admin/dashboard/?page=<%= previousPage %>" class="pagination" style="font-size: 1.1rem; color: #007BFF; text-decoration: none;">&lt; Previous</a>
      <% } %>
    </div>
    <div>
      <% if (nextPage !== null) { %>
        <a href="/admin/dashboard/?page=<%= nextPage %>" class="pagination" style="font-size: 1.1rem; color: #007BFF; text-decoration: none;">Next &gt;</a>
      <% } %>
    </div>
  </div>
</section>
